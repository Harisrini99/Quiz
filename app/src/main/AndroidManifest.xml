<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.quiz">

    <application
        android:allowBackup="true"
        android:icon="@drawable/logo"
        android:label="Quiz"
        android:roundIcon="@drawable/logo"
        android:supportsRtl="true"
        android:theme="@style/AppTheme.NoActionBar.Dark">
        <activity android:name=".activity.EditQuestionActivity"></activity>
        <activity android:name=".activity.QuestionSliderActivity" />
        <activity android:name=".activity.QuestionListActivity" />
        <activity android:name=".activity.QuestionSetListActivity" />
        <activity
            android:name=".activity.HomeActivity"
            android:theme="@style/AppTheme.NoActionBar.Dark">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_NOTIFICATION_POLICY" />

    <uses-permission android:name="android.permission.INTERNET" />

</manifest>